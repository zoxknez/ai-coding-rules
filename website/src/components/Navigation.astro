---
const { pathname } = Astro.url;
---

<nav class="fixed top-0 left-0 right-0 z-50 glass border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <div class="w-8 h-8 bg-gradient-primary rounded-lg"></div>
        <span class="text-xl font-bold">AI Coding Rules</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class={`nav-link ${pathname === '/' ? 'active' : ''}`}
          aria-label="Home"
        >
          Home
        </a>
        <a 
          href="/rules" 
          class={`nav-link ${pathname.startsWith('/rules') ? 'active' : ''}`}
          aria-label="Browse Rules"
        >
          Rules
        </a>
        <a 
          href="/mesh" 
          class={`nav-link ${pathname === '/mesh' ? 'active' : ''}`}
          aria-label="3D Mesh Visualization"
        >
          Mesh
        </a>
        <a 
          href="https://github.com/ai-coding-rules/ai-coding-rules" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 glass rounded-lg hover:bg-white/10 transition-all"
          aria-label="View on GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          <span>GitHub</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-white/10 transition-colors"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path id="menu-open-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="menu-close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-3">
        <a 
          href="/" 
          class={`mobile-nav-link ${pathname === '/' ? 'active' : ''}`}
        >
          Home
        </a>
        <a 
          href="/rules" 
          class={`mobile-nav-link ${pathname.startsWith('/rules') ? 'active' : ''}`}
        >
          Rules
        </a>
        <a 
          href="/mesh" 
          class={`mobile-nav-link ${pathname === '/mesh' ? 'active' : ''}`}
        >
          Mesh
        </a>
        <a 
          href="https://github.com/ai-coding-rules/ai-coding-rules" 
          target="_blank"
          rel="noopener noreferrer"
          class="mobile-nav-link flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer to prevent content from going under fixed nav -->
<div class="h-16"></div>

<style>
  .nav-link {
    color: #cbd5e1;
    font-weight: 500;
    position: relative;
    transition: color 0.2s;
  }
  
  .nav-link:hover {
    color: #f8fafc;
  }

  .nav-link.active {
    color: #f8fafc;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -1.5rem;
    left: 0;
    right: 0;
    height: 0.125rem;
    background: linear-gradient(to right, #6366f1, #06b6d4);
  }

  .mobile-nav-link {
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    color: #cbd5e1;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .mobile-nav-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #f8fafc;
  }

  .mobile-nav-link.active {
    background-color: rgba(99, 102, 241, 0.2);
    color: #f8fafc;
    border: 1px solid rgba(99, 102, 241, 0.3);
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  mobileMenuBtn?.addEventListener('click', () => {
    const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
    
    mobileMenuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuOpenIcon?.classList.toggle('hidden');
    menuCloseIcon?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('.mobile-nav-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuOpenIcon?.classList.remove('hidden');
      menuCloseIcon?.classList.add('hidden');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
